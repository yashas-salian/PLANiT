generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model User{
  id Int @id @default(autoincrement())
  name String
  email String 
  password String
  events Events[]
}


model Events{
  id Int @id @default(autoincrement())
  clientName String 
  PhoneNumber BigInt
  EventName String 
  Category String
  EventDate DateTime
  EventVenue String
  Attendees Int
  Budget BigInt
  userID Int
  user User @relation(fields: [userID], references: [id] )
}


model Venues{
  id Int @id @default(autoincrement())
  VenueName String
  Address String 
  capacity Int
  Rent BigInt
}